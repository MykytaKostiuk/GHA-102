{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "lib": ["ES2024"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals":  false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}